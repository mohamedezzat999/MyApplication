<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:background="@drawable/background_border_custome"
            android:paddingRight="15dp"
            android:gravity="center"
            android:paddingTop="50dp">

    <com.iambedant.text.OutlineTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Have Incoming Request from"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:outlineColor="@android:color/black"
        app:outlineWidth="0.4"
        />

            <com.iambedant.text.OutlineTextView
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:layout_marginTop="2dp"
                android:text="Ahmed Mohamed Mahmoud"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryFive"
                android:textColorHighlight="@android:color/black"
                android:textColorHint="#80000000"
                android:textSize="19dp"
                android:textStyle="bold"
                app:outlineColor="@android:color/black"
                app:outlineWidth="0.4"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp">



        <Button
            android:id="@+id/btn_acc"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/background_border_custom"
            android:textColor="@color/green"
            android:textSize="13dp"
            android:layout_marginRight="20dp"
            android:text="Accebt"/>

        <Button
            android:id="@+id/btn_dec"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/background_border_custom"
            android:textColor="@color/red"
            android:textSize="13dp"
            android:text="Decline"/>

    </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>