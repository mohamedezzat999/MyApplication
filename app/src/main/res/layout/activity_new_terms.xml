<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".NewTermsActivity"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:background="@drawable/backoo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الشروط و الأحكام"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColorHighlight="@color/Black"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شروط الإستخدام"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="يرجى قراءة شروط الاستخدام هذه بعناية، وباستخدامك لهذا التطبيق فأنت تعلن فهمك وقبولك لهذه الشروط. وإذا لم توافق على هذه الشروط، لا يجوز لك استخدام هذا التطبيق"
                android:layout_marginTop="10dp"

                android:textSize="20dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/Black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وصف الخدمة وسياسة المحتوى"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="نحن وسيلة لسهولة الوصول للحرفين, اننا نعمل كتطبيق يصل المستخدم بالحرفي و لذلك أنت على دراية كاملة ان Give Me Service لا يدخل بأي شكل من الاشكال في العملية بينك و بين الحرفي و نحن غير مسئولين بتاتاً عن الحرفي و ما يقدمه من خدمة لك و لسنا مسئولين عنه, لذلك أنت تقر بعدم مسئوليتنا عن الحرفي طبقا للشروط الموضحة .."
                android:textSize="20dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/Black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="السلوك"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="انت توافق على عدم نشر تعليقات غير مناسبة كأي إساءة لفظية عدم وضع أي اعلانات في البرنامج عن طريق التعليقات"
                android:textSize="20dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/Black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حقوق الملكية الفكرية"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="انت تقر وتوافق على أن المواد الموجودة على التطبيق مملوكة لGive Me Service  و ليس لك حق التصرف بها وخاضعة لحق النسخ وغيرها من حقوق الملكية الفكرية بموجب قوانين جمهورية مصر العربية"
                android:textSize="20dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/Black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حدود الخدمة وإنهاءها"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="أنت تقر وتوافق على إمكانية أن يقوم Give Me Service  بعمل حدود من حين لآخر فيما يتعلق باستخدام الخدمة بما في ذلك على سبيل المثال وليس الحصر أقصى عدد من الأيام التي سيتم الاحتفاظ بالتعليقات"
                android:textSize="20dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/Black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إخلاء المسئولية عن الضمانات"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="أنت تقر إقراراً صريحاً وتوافق على أن استخدام التطبيق والخدمة سيكون على مسئوليتك بالكامل وأن الخدمات المعتمدة عليه والتي يتم تقديمها )كما هي( أو )على أساس الإتاحة( تكون بدون ضمانات من أي نوع. ولا يكون هناك أي مسئولية صريحة عن جميع الضمانات الصريحة والضمنية"
                android:textSize="20dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/Black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التنازل"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="لا يجوز نقل أو التنازل عن هذه الشروط وأي حقوق أو تراخيص ممنوحة بموجبها بواسطتك، ولكن يمكن التنازل عنها من قبل Give Me Service  دون أي قيود. وأي تنازل أو نقل لهذه الشروط من قبلك يعتبر لاغٍ ولا يعتد به"
                android:textSize="20dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/Black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المعلومات العامة"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="تشكل هذه الشروط والسياسات الأخرى المنشورة على هذا التطبيق كامل المفاهمة والاتفاق الحصريين بينك وبين Give Me Service  ، وهي تحكم استخدامك للخدمة و التطبيق وتحل محل كافة المفاهمات والعروض والاتفاقيات والمفاوضات والنقاشات بين الأطراف سواء خطية أو شفهية. ويجب أن تُحكم الشروط والعلاقة بينك وبين  Give Me Service عن طريق قوانين جمهورية مصر العربية . وأي مطالبة قد تكون لك ضد Give Me Service يجب تقديمها إلى المحاكم ذات الاختصاص القضائي الحصري بمصر. ومع ذلك فإنه إذا كنت مستهلكاً فقد يطلب قانون المستهلك تطبيق قانون آخر"
                android:textSize="20dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/Black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سياسة الخصوصية"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="نحن نحترم خصوصيتك ولقد قمنا بتطوير سياسة خاصة بالخصوصية مدمجة بهذه الاتفاقية. نرجو إتاحة بعض الوقت لقراءة سياسة الخصوصية الخاصة بنا، وبالموافقة على هذه الشروط، فأنت أيضا تقبل شروط سياسة الخصوصية هذه"
                android:textSize="20dp"
                android:textColorHighlight="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/Black"

                />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/background_border"
                android:textColor="@android:color/white"
                android:textSize="13dp"
                android:text="Login"/>

        </LinearLayout>





    </LinearLayout>

</ScrollView>
